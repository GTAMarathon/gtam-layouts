{
  "$schema": "http://json-schema.org/draft-07/schema",
  "definitions": {
    "audio": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    }
  },
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "twitchExt": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": false
        },
        "token": {
          "type": "string",
          "default": "TOKEN"
        }
      },
      "required": [
        "enable",
        "token"
      ]
    },
    "highlight": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": false
        },
        "gqlOAuth": {
          "type": "string",
          "default": ""
        },
        "clientID": {
          "type": "string",
          "default": ""
        },
        "offsetStart": {
          "type": "integer",
          "default": 0
        },
        "offsetEnd": {
          "type": "integer",
          "default": 4
        }
      },
      "required": [
        "enable",
        "gqlOAuth",
        "clientID",
        "offsetStart",
        "offsetEnd"
      ]
    },
    "obs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": true
        },
        "address": {
          "type": "string",
          "default": "localhost:4444"
        },
        "password": {
          "type": "string",
          "default": ""
        },
        "names": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "scenes": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "intermission": {
                  "type": "string",
                  "default": "Intermission"
                },
                "quiz": {
                  "type": "string",
                  "default": "quiz"
                },
                "_1p32": {
                  "type": "string",
                  "default": "3:2 1p"
                },
                "_1p43": {
                  "type": "string",
                  "default": "4:3 1p"
                },
                "_2p43": {
                  "type": "string",
                  "default": "4:3 2p"
                },
                "_3p43": {
                  "type": "string",
                  "default": "4:3 3p"
                },
                "_1p169": {
                  "type": "string",
                  "default": "16:9 1p"
                },
                "_2p169": {
                  "type": "string",
                  "default": "16:9 2p"
                },
                "_3p169": {
                  "type": "string",
                  "default": "16:9 3p"
                },
                "_4p169_1": {
                  "type": "string",
                  "default": "16:9 4p"
                },
                "_4p169_2": {
                  "type": "string",
                  "default": "16:9 4p2"
                },
                "_4p169_3": {
                  "type": "string",
                  "default": "16:9 4p3"
                },
                "_4p169_4": {
                  "type": "string",
                  "default": "16:9 4p4"
                },
                "vcbingo": {
                  "type": "string",
                  "default": "GTA VC Bingo"
                },
                "vchundo": {
                  "type": "string",
                  "default": "GTA VC Bingo"
                },
                "vbingo": {
                  "type": "string",
                  "default": "GTA V Bingo"
                }
              },
              "required": [
                "intermission",
                "quiz",
                "_1p32",
                "_1p43",
                "_2p43",
                "_3p43",
                "_1p169",
                "_2p169",
                "_3p169",
                "_4p169_1",
                "_4p169_2",
                "_4p169_3",
                "_4p169_4",
                "vcbingo",
                "vchundo",
                "vbingo"
              ]
            },
            "sources": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "intermissionVideo": {
                  "type": "string",
                  "default": "Background Video"
                },
                "intermissionMusic": {
                  "type": "string",
                  "default": "Music"
                },
                "runner1_169": {
                  "type": "string",
                  "default": "16:9 Feed 1"
                },
                "runner2_169": {
                  "type": "string",
                  "default": "16:9 Feed 2"
                },
                "runner3_169": {
                  "type": "string",
                  "default": "16:9 Feed 3"
                },
                "runner4_169": {
                  "type": "string",
                  "default": "16:9 Feed 4"
                },
                "runner1_32": {
                  "type": "string",
                  "default": "3:2 Feed 1"
                },
                "runner1_43": {
                  "type": "string",
                  "default": "4:3 Feed 1"
                },
                "runner2_43": {
                  "type": "string",
                  "default": "4:3 Feed 2"
                },
                "runner3_43": {
                  "type": "string",
                  "default": "4:3 Feed 3"
                },
                "runner4_43": {
                  "type": "string",
                  "default": "4:3 Feed 4"
                },
                "runner5_43": {
                  "type": "string",
                  "default": "4:3 Feed 5"
                }
              },
              "required": [
                "intermissionVideo",
                "intermissionMusic",
                "runner1_32",
                "runner1_43",
                "runner2_43",
                "runner3_43",
                "runner4_43",
                "runner5_43",
                "runner1_169",
                "runner2_169",
                "runner3_169",
                "runner4_169"
              ]
            },
            "paths": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "intermissionVideo": {
                  "type": "string"
                },
                "intermissionMusic": {
                  "type": "string"
                }
              },
              "required": [
                "intermissionVideo",
                "intermissionMusic"
              ]
            },
            "audioToMute": {
              "$ref": "#/definitions/audio"
            },
            "audioToUnmute": {
              "$ref": "#/definitions/audio"
            }
          },
          "required": [
            "scenes",
            "sources",
            "paths",
            "audioToMute",
            "audioToUnmute"
          ]
        }
      },
      "required": [
        "enable",
        "address",
        "names"
      ]
    },
    "feeds": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "playerUrl": {
          "type": "string",
          "default": "https://player.twitch.tv/?channel={{twitchAccount}}&enableExtensions=false&muted=false&player=popout&volume=1"
        },
        "streams": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string"
              },
              "twitchAccount": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "twitchAccount"
            ]
          }
        }
      },
      "required": [
        "playerUrl",
        "streams"
      ]
    },
    "betting": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": false
        },
        "broadcaster_id": {
          "type": "string",
          "default": ""
        }
      },
      "required": [
        "enable",
        "broadcaster_id"
      ]
    },
    "schedule": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": false
        },
        "marathonShort": {
          "type": "string",
          "default": ""
        }
      },
      "required": [
        "enable",
        "marathonShort"
      ]
    },
    "hundo": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "port": {
          "type": "number",
          "default": 5353
        }
      },
      "required": [
        "port"
      ]
    }
  },
  "required": [
    "twitchExt",
    "obs",
    "highlight",
    "feeds",
    "schedule",
    "betting",
    "hundo"
  ]
}