{
  "$schema": "http://json-schema.org/draft-07/schema",
  "definitions": {
    "audio": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    }
  },
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "twitchExt": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": false
        },
        "token": {
          "type": "string",
          "default": "TOKEN"
        }
      },
      "required": [
        "enable",
        "token"
      ]
    },
    "highlight": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": false
        },
        "gqlOAuth": {
          "type": "string",
          "default": ""
        },
        "clientID": {
          "type": "string",
          "default": ""
        },
        "offsetStart": {
          "type": "integer",
          "default": 0
        },
        "offsetEnd": {
          "type": "integer",
          "default": 4
        }
      },
      "required": [
        "enable",
        "gqlOAuth",
        "clientID",
        "offsetStart",
        "offsetEnd"
      ]
    },
    "obs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": true
        },
        "address": {
          "type": "string",
          "default": "localhost:4444"
        },
        "password": {
          "type": "string",
          "default": ""
        },
        "names": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "scenes": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "intermission": {
                  "type": "string",
                  "default": "Intermission"
                },
                "_1p43": {
                  "type": "string",
                  "default": "1p43"
                },
                "_2p43": {
                  "type": "string",
                  "default": "2p43"
                },
                "_3p43": {
                  "type": "string",
                  "default": "3p43"
                },
                "_1p169": {
                  "type": "string",
                  "default": "1p169"
                },
                "_2p169": {
                  "type": "string",
                  "default": "2p169"
                },
                "_3p169": {
                  "type": "string",
                  "default": "3p169"
                },
                "_4p169_1": {
                  "type": "string",
                  "default": "4p169_1"
                },
                "_4p169_2": {
                  "type": "string",
                  "default": "4p169_2"
                },
                "_4p169_3": {
                  "type": "string",
                  "default": "4p169_3"
                },
                "_4p169_4": {
                  "type": "string",
                  "default": "4p169_4"
                },
                "_2bingo": {
                  "type": "string",
                  "default": "2bingo"
                },
                "vcbingo": {
                  "type": "string",
                  "default": "vcbingo"
                },
                "vcsbingo": {
                  "type": "string",
                  "default": "vcsbingo"
                }
              },
              "required": [
                "intermission",
                "_1p43",
                "_2p43",
                "_3p43",
                "_1p169",
                "_2p169",
                "_3p169",
                "_4p169_1",
                "_4p169_2",
                "_4p169_3",
                "_4p169_4",
                "_2bingo",
                "vcbingo",
                "vcsbingo"
              ]
            },
            "sources": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "intermissionVideo": {
                  "type": "string",
                  "default": "intermissionVideo"
                },
                "intermissionMusic": {
                  "type": "string",
                  "default": "intermissionMusic"
                },
                "runner1_169": {
                  "type": "string",
                  "default": "runner1_169"
                },
                "runner2_169": {
                  "type": "string",
                  "default": "runner2_169"
                },
                "runner3_169": {
                  "type": "string",
                  "default": "runner3_169"
                },
                "runner4_169": {
                  "type": "string",
                  "default": "runner4_169"
                },
                "runner1_43": {
                  "type": "string",
                  "default": "runner1_43"
                },
                "runner2_43": {
                  "type": "string",
                  "default": "runner2_43"
                },
                "runner3_43": {
                  "type": "string",
                  "default": "runner3_43"
                },
                "runner4_43": {
                  "type": "string",
                  "default": "runner4_43"
                }
              },
              "required": [
                "intermissionVideo",
                "intermissionMusic",
                "runner1_43",
                "runner2_43",
                "runner3_43",
                "runner4_43",
                "runner1_169",
                "runner2_169",
                "runner3_169",
                "runner4_169"
              ]
            },
            "paths": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "intermissionVideo": {
                  "type": "string"
                },
                "intermissionMusic": {
                  "type": "string"
                }
              },
              "required": [
                "intermissionVideo",
                "intermissionMusic"
              ]
            },
            "audioToMute": {
              "$ref": "#/definitions/audio"
            },
            "audioToUnmute": {
              "$ref": "#/definitions/audio"
            }
          },
          "required": [
            "scenes",
            "sources",
            "paths",
            "audioToMute",
            "audioToUnmute"
          ]
        }
      },
      "required": [
        "enable",
        "address",
        "names"
      ]
    },
    "feeds": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "playerUrl": {
          "type": "string",
          "default": "https://player.twitch.tv/?channel={{twitchAccount}}&enableExtensions=false&muted=false&player=popout&volume=1"
        },
        "streams": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string"
              },
              "twitchAccount": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "twitchAccount"
            ]
          }
        }
      },
      "required": [
        "playerUrl",
        "streams"
      ]
    },
    "betting": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": false
        },
        "broadcaster_id": {
          "type": "string",
          "default": ""
        }
      },
      "required": [
        "enable",
        "broadcaster_id"
      ]
    }
  },
  "required": [
    "twitchExt",
    "obs",
    "highlight",
    "feeds",
    "betting"
  ]
}