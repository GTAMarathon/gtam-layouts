{
  "$schema": "http://json-schema.org/draft-07/schema",
  "definitions": {
    "audio": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    }
  },
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "twitchExt": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": false
        },
        "token": {
          "type": "string",
          "default": "TOKEN"
        }
      },
      "required": [
        "enable",
        "token"
      ]
    },
    "highlight": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": false
        },
        "gqlOAuth": {
          "type": "string",
          "default": ""
        },
        "clientID": {
          "type": "string",
          "default": ""
        },
        "offsetStart": {
          "type": "integer",
          "default": 0
        },
        "offsetEnd": {
          "type": "integer",
          "default": 4
        }
      },
      "required": [
        "enable",
        "gqlOAuth",
        "clientID",
        "offsetStart",
        "offsetEnd"
      ]
    },
    "obs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": true
        },
        "address": {
          "type": "string",
          "default": "localhost:4444"
        },
        "password": {
          "type": "string",
          "default": ""
        },
        "names": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "scenes": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "intermission": {
                  "type": "string",
                  "default": "Intermission"
                },
                "quiz": {
                  "type": "string",
                  "default": "quiz"
                },
                "gameLayout": {
                  "type": "string",
                  "default": "Game Layout"
                },
                "vchundo": {
                  "type": "string",
                  "default": "GTA VC Hundo"
                }
              },
              "required": [
                "intermission",
                "quiz",
                "gameLayout",
                "vchundo"
              ]
            },
            "sources": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "intermissionVideo": {
                  "type": "string",
                  "default": "Background Video"
                },
                "intermissionMusic": {
                  "type": "string",
                  "default": "Music"
                },
                "runner1": {
                  "type": "string",
                  "default": "Feed 1"
                },
                "runner2": {
                  "type": "string",
                  "default": "Feed 2"
                },
                "runner3": {
                  "type": "string",
                  "default": "Feed 3"
                },
                "runner4": {
                  "type": "string",
                  "default": "Feed 4"
                },
                "runner5": {
                  "type": "string",
                  "default": "Feed 5"
                },
                "bingoBoard": {
                  "type": "string",
                  "default": "Bingo Board"
                }
              },
              "required": [
                "intermissionVideo",
                "intermissionMusic",
                "runner1",
                "runner2",
                "runner3",
                "runner4",
                "runner5",
                "bingoBoard"
              ]
            },
            "paths": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "intermissionVideo": {
                  "type": "string"
                },
                "intermissionMusic": {
                  "type": "string"
                }
              },
              "required": [
                "intermissionVideo",
                "intermissionMusic"
              ]
            },
            "audioToMute": {
              "$ref": "#/definitions/audio"
            },
            "audioToUnmute": {
              "$ref": "#/definitions/audio"
            }
          },
          "required": [
            "scenes",
            "sources",
            "paths",
            "audioToMute",
            "audioToUnmute"
          ]
        }
      },
      "required": [
        "enable",
        "address",
        "names"
      ]
    },
    "feeds": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "playerUrl": {
          "type": "string",
          "default": "https://player.twitch.tv/?channel={{twitchAccount}}&enableExtensions=false&muted=false&player=popout&volume=1"
        },
        "streams": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string"
              },
              "twitchAccount": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "twitchAccount"
            ]
          }
        }
      },
      "required": [
        "playerUrl",
        "streams"
      ]
    },
    "betting": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": false
        },
        "broadcaster_id": {
          "type": "string",
          "default": ""
        }
      },
      "required": [
        "enable",
        "broadcaster_id"
      ]
    },
    "schedule": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enable": {
          "type": "boolean",
          "default": false
        },
        "marathonShort": {
          "type": "string",
          "default": ""
        }
      },
      "required": [
        "enable",
        "marathonShort"
      ]
    },
    "hundo": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "port": {
          "type": "number",
          "default": 5353
        }
      },
      "required": [
        "enabled",
        "port"
      ]
    }
  },
  "required": [
    "twitchExt",
    "obs",
    "highlight",
    "feeds",
    "schedule",
    "betting",
    "hundo"
  ]
}